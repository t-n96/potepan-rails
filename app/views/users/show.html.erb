<div class="index" >
  <h3>ユーザー詳細</h3>
  
      <table class="inner__table">
        <tr>
          <th>タイトル</th>
          <td><%= @user.title %></td>
        </tr>
        <tr>
          <th>開始日</th>
          <td><%= @user.start %></td>
        </tr>
        <tr>
          <th>終了日</th>
          <td><%= @user.end %></td>
        </tr>
        <tr>
          <th>終日</th>
          <td>
            <% if @user.checkbox == true %>
            ○
            <% else @user.checkbox == false %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>スケジュール内容詳細</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>
  
      <div>
        <ul>
        <li><%= link_to "< スケジュール一覧に戻る", :users, class:"index__list" %></li>
        </ul>
      </div>
</div>