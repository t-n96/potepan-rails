<div class="index" >
  <h3>スケジュール一覧</h3>
  <% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
  <% end %>

  <table class="inner">
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>スケジュール更新日時</th>
        <th>確認</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.title %></td>
        <td><%= user.start %></td>
        <td><%= user.end %></td>
        <td>
        <% if user.checkbox == true %>
        ○
        <% else user.checkbox == false %>
        <% end %>
        </td>
        <td><%= user.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to '確認',user, class:"btn" %></td>
        <td><%= link_to '編集',[:edit,user], class:"btn" %></td>
        <td><%= link_to '削除',user,method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <p><%= link_to "スケジュール新規登録", :new_user, class:"new" %></p>
</div>

