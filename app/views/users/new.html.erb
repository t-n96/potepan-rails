<div class="index" >
  <h3>ユーザー新規作成</h3>
  
      <%= form_with model: @user do |f| %>
        <table class="inner__table">
          <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
          </tr>
  
          <tr>
            <th><%= f.label :start ,"開始日" %></th>
            <td><%= f.date_field :start %></td>
          </tr>

          <tr>
            <th><%= f.label :end ,"終了日" %></th>
            <td><%= f.date_field :end %></td>
          </tr>

          <tr>
            <th><%= f.label :checkbox ,"終日" %></th>
            <td><%= f.check_box :checkbox, {}, true, false %><br>終日の場合はチェック入れる</td>
          </tr>
  
          <tr>
            <th><%= f.label :introduction ,"スケジュール内容詳細" %></th>
            <td><%= f.text_area :introduction, :size => "30*30" %></td>
          </tr>
        </table>
  
        <div>
          <ul>
            <li><%= f.submit "登録完了する", class:"index__create"%></li>
            <li><%= link_to "< スケジュール一覧に戻る", :users, class:"index__list" %></li>
          </ul>
        </div>
      <% end %>
</div>